<div class="image_with_text_box_container">
  <div class="imagewithTextImageBox">
    <img
      class="imagewithTextImage"
      src="{{ 'image.jpg' | asset_url}}"
      alt="">
  </div>
  <div class="imagewithTextBox">
    <h1 class="imagewithTextHeading">{{ section.settings.image_with_text_heading }}</h1>
    <p class="imagewithTextParagraph">{{ section.settings.image_with_text_paragraph }}</p>
    <div class="buttonBox">
      <button class="btn">Shop Now</button>
      <button class="btn">Buy Now</button>
    </div>
  </div>
</div>


<style>
  .image_with_text_box_container {
    padding: 2rem 0;
    display: flex;
  }
  .imagewithTextImageBox {
    width: 80%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .imagewithTextHeading {
    margin: 0;
  }
  .imagewithTextParagraph {
    width: 80%;
    text-align: justify;
  }
  .imagewithTextImage {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .imagewithTextBox {
    padding: 2rem;
    display: flex;
    justify-content: center;
    flex-direction: column;
  }
  .btn {
    padding: 8px 14px;
    font-size: 1rem;
    border-radius: 4px;
    border: 1px solid #092186;
    font-weight: 600;
    color: #092186;
  }
  .btn:hover {
    cursor: pointer;
    background-color: #092186;
    border: 1px solid white;
    color: white;
  }
</style>


