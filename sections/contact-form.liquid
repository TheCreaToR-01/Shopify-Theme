<div class="contactFormSection">
  <h1 class="contactFormSectionHeading">Contact Form</h1>
  <div class="contactForm">
    <form action="/">
      <div class="firstRow">
        <input
          type="text"
          id="name"
          placeholder="Name">
        <input
          type="email"
          id="email"
          placeholder="Email">
      </div>
      <input
        type="tel"
        id="number"
        placeholder="Phone Number">
      <textarea
        name="comment"
        id="comment"
        placeholder="Comment"></textarea>

      <input
        type="submit"
        value="Send"
        id="send">
    </form>
  </div>
</div>

<style>
  .contactFormSection {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  .contactFormSectionHeading {
    font-size: 2.3rem;
  }
  .contactForm {
    width: 40%;
  }
  .contactForm form {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .contactForm input,
  .contactForm textarea {
    width: 100%;
    padding: 1rem;
    border-radius: 4px;
    border: 1px solid #092186;
    margin: 0.5rem;
    outline: none;
    font-size: 16px;
    color: #092186;
    letter-spacing: 1px;
  }
  .contactForm input::placeholder,
  .contactForm textarea::placeholder {
    color: #092186;
  }
  #number,
  #comment {
    width: 97%;
    font-family: var(--bodyFont);
  }
  .firstRow {
    display: flex;
    width: 100%;
  }
  #name,
  #email {
    width: 97%;
    font-family: var(--bodyFont);
  }
  #send {
    width: 20%;
    background: #092186;
    color: white;
    font-weight: 700;
    padding: 0.8rem;
    margin-top: 1rem;
    font-family: var(--bodyFont);
  }
</style>


{% schema %}
  {
    "name": "Contact Form",
    "settings": [
      {
        "type": "richtext",
        "id": "contact_form_heding",
        "label": "Contact Form Heading",
        "default": "<h1>Contact Form</h1>"
      }

    ]
  }
{% endschema %}